  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}/packages/vsce"],
      "outFiles": ["${workspaceFolder}/packages/vsce/out/**/*.js"],
      "preLaunchTask": "npm: watch"
    },
    {
      "type": "node",
