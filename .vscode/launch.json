// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}/packages/vsce"],
      "outFiles": ["${workspaceFolder}/packages/vsce/out/**/*.js"],
      "preLaunchTask": "npm: watch"
    },
    {
      "name": "Debug Zowe SSH Command",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/@zowe/cli/lib/main.js",
      "args": ["zssh", "-h"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    // Use Node version 22
    {
      "name": "Debug Vitest",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
      "console": "integratedTerminal",
      "autoAttachChildProcesses": true,
      // Uncomment to only run the focused test file
      "args": ["run" /*"${file}"*/],
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "cwd": "${workspaceFolder}/packages/sdk",
      "runtimeVersion": "22"
    }
  ]
}
