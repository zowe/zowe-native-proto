// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": "$ts-webpack-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "path": "./packages/vsce"
    },
    {
      "type": "npm",
      "script": "z:watch",
      "problemMatcher": [
        {
          "owner": "zos-cpp",
          "source": "z/OS C++",
          "fileLocation": [
            "search",
            { "include": ["${workspaceFolder}/native"] }
          ],
          "pattern": {
            "regexp": "^\\s*\"(?:\\./)?(.+)\", line (\\d+)\\.(\\d+): (\\w+\\d+) \\((.)\\) (.+?)\\s*$",
            "file": 1,
            "line": 2,
            "column": 3,
            "code": 4,
            "severity": 5,
            "message": 6
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^\\d{1,2}/\\d{1,2}/\\d{4}, \\d{1,2}:\\d{2}:\\d{2} (?:AM|PM)\\s*$",
            "endsPattern": "^\\s*watching for changes\\.\\.\\.\\s*$"
          }
        },
        {
          "owner": "zos-metal",
          "source": "z/OS Metal C",
          "severity": "error",
          "fileLocation": [
            "search",
            { "include": ["${workspaceFolder}/native"] }
          ],
          "pattern": {
            "regexp": "^\\s*ERROR (\\w+) \\./(.+):(\\d+)\\s+(.+)\\.\\s*$",
            "file": 2,
            "line": 3,
            "code": 1,
            "message": 4
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^\\d{1,2}/\\d{1,2}/\\d{4}, \\d{1,2}:\\d{2}:\\d{2} (?:AM|PM)\\s*$",
            "endsPattern": "^\\s*watching for changes\\.\\.\\.\\s*$"
          }
        }
      ],
      "isBackground": true,
      "presentation": {
        "reveal": "always"
      },
      "group": "build"
    }
  ]
}
