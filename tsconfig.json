{
    "compilerOptions": {
        "types": [
            "node",
        ],
        "target": "es2022",
        "module": "commonjs",
        "declaration": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./lib",
        "preserveConstEnums": true,
        "removeComments": false,
        "pretty": true,
        "sourceMap": true,
        "newLine": "lf",
        "strictNullChecks": false,
        "noUnusedLocals": false,
        "skipLibCheck": true
    },
    "exclude": [
        "lib",
        "node_modules",
        "**/__mocks__/*",
        "**/__tests__/*",
        "**/*.spec.ts",
        "**/*-spec.ts",
        "**/*.test.ts"
    ]
}